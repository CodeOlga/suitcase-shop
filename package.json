{
  "name": "suitcase-shop",
  "version": "1.0.0",
  "description": "Multi-page responsive e-commerce website for travel suitcases",
  "license": "MIT",
  "author": "Olga K.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "sass": "sass --watch src/scss:src/css",
    "sass:build": "sass src/scss:src/css",
    "sprite": "svg-sprite --config sprite.config.json src/assets/icons/**/*.svg",
    "build": "npm run sprite && npm run sass:build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js",
    "lint:css": "stylelint src/**/*.scss",
    "build:ci": "npm run build && npm run lint",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.92.1",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "svg-sprite": "^2.0.4"
  }
}
